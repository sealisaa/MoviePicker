<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviePicker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mild_yellow</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/smoke_grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="Theme.MoviePicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="HomeTabsTheme">
        <item name="android:textColorPrimary">@color/mild_yellow</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/mild_yellow</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="GenreButtonTheme">
        <item name="android:textColorPrimary">@color/mild_yellow</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerSizeTopLeft">70%</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.MoviePicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.MoviePicker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>